<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter
    xmlns="https://github.com/spotbugs/filter/3.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://github.com/spotbugs/filter/3.0.0 https://raw.githubusercontent.com/spotbugs/spotbugs/3.1.0/spotbugs/etc/findbugsfilter.xsd">

    <!-- Suppress FindSecBugs SpringEntityLeakDetector analysis errors on controllers -->
    <!-- These are analyzer bugs with generic type parsing, not actual code issues -->
    <Match>
        <Class name="com.bootsandcats.oauth2.controller.UserInfoController"/>
        <Bug pattern="SPRING_ENDPOINT"/>
    </Match>
    
    <Match>
        <Class name="com.bootsandcats.oauth2.controller.CustomErrorController"/>
        <Bug pattern="SPRING_ENDPOINT"/>
    </Match>

    <!-- Suppress analysis errors on Map<String, Object> return types -->
    <!-- FindSecBugs has issues parsing generic signatures in these cases -->
    <Match>
        <Class name="~.*Controller"/>
        <Method name="~(getUserInfo|error)"/>
        <Bug pattern="SPRING_ENDPOINT"/>
    </Match>
</FindBugsFilter>
